<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac.retrofitdemo.ui.activity.DownloadActivity">
    <Button
        android:id="@+id/bt_download"
        android:text="开始下载"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints"/>
    <Button
        android:id="@+id/bt_pause"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bt_download"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/bt_download"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/np_bar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_download"
        app:layout_constraintVertical_bias="0.005"
        android:text="暂停下载"/>

    <Button
        android:id="@+id/bt_continue"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bt_download"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/bt_download"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/np_bar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_download"
        app:layout_constraintVertical_bias="0.167"
        android:text="继续下载"/>
    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bt_download"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/bt_download"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/np_bar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_download"
        app:layout_constraintVertical_bias="0.331"
        android:text="取消下载"
        android:id="@+id/bt_cancel"/>
    <ProgressBar
        android:id="@+id/np_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:progress="0"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
